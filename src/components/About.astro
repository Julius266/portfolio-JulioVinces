<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #001233;
        padding: 1rem;
    }

    .content-box {
        background-color: #001233;
        border-radius: 10px;
        padding: 2rem;
        width: 100%;
        max-width: 900px;
        text-align: center;
    }

    .greeting {
        font-size: 3rem;
        color: #FF595A;
        margin-bottom: 1rem;
        text-align: left;
    }

    .short-description {
        font-size: 2.5rem;
        color: #CAC0B3;
        margin-bottom: 2rem;
        text-align: left;
    }

    .about-content {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem; /* Espacio entre la imagen y la descripción */
        margin-bottom: 2rem;
    }

    .description {
        max-width: 500px;
        font-size: 1.5rem;
        color: #CAC0B3;
        text-align: left;
    }

    .image-container {
        width: 300px;
        height: 300px;
        border-radius: 50%;
        overflow: hidden;
    }

    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .contact-buttons {
        display: flex;
        justify-content: left;
        gap: 1rem;
        
    }

    .button {
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        padding: 8px 16px; /* Botones más pequeños */
        border: 2px solid #FF595A; /* Borde rojo */
        border-radius: 25px; /* Botones ovalados */
        font-weight: bold;
        font-size: 1rem;
        transition: background-color 0.3s, color 0.3s;
        color: white;
    }

    .button i {
        margin-right: 8px; /* Espacio entre el ícono y el texto */
    }

    .button:hover {
        background-color: #FF595A;
        color: #fff;
    }

    /* Estilos específicos para GitHub y correo */
    .github {
        background-color: transparent;
        border-color: #000;
        color: #000;
    }

    .email {
        background-color: transparent;
        border-color: #000;
        color: #000;
    }

    .github:hover {
        background-color: #000;
        color: #fff;
    }

    .email:hover {
        background-color: #000;
        color: #fff;
    }

    .highlight-node{
        color: #FFFFFF;
        font-weight: bold
    }

