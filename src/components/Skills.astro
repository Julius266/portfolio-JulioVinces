<style>
  /* Estilos generales para la secci√≥n de habilidades */
  #skills {
    padding: 3rem 2rem;
    background-color: #f4f4f4;
  }

  .skills-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .section-title {
    font-size: 2.5rem;
    color: #FF595A;
    margin-bottom: 2rem;
  }

  .skills-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .skills-card {
    background-color: #CAC0B3;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .skills-card:hover {
    transform: translateY(-10px);
  }

  .skills-category {
    font-size: 1.8rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 1.5rem;
  }

  .skills-logos {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .skill {
    text-align: center;
    max-width: 100px;
  }

  .skill-logo {
    width: 80px;
    height: 80px;
    object-fit: contain;
    margin-bottom: 0.5rem;
  }

  .skill-name {
    font-size: 1rem;
    color: #555;
  }

  /* Responsividad */
  @media (max-width: 768px) {
    .skills-container {
      padding: 1rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .skills-card {
      padding: 1.5rem;
    }

    .skills-category {
      font-size: 1.6rem;
    }

    .skill-logo {
      width: 60px;
      height: 60px;
    }

    .skill-name {
      font-size: 0.9rem;
    }
  }
</style>